<Window x:Class="WPFSerialPort.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSerialPort"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <StackPanel>
        <Button x:Name="connection" Width="100" Height="30" Content="프린터연결" Click="connection_Click"/>
        <Button x:Name="deconnection" Width="100" Height="30" Content="프린터연결해지" Click="deconnection_Click"/>
        <TextBlock x:Name="label_status" Text=""/>
        <TextBlock x:Name="richTextBox_received" Text=""/>
    </StackPanel>
</Window>
